@model Taller.Model.ViewModels.AutoVM;
@{
    ViewData["Title"] = "Auto_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oAuto.Id==0)
{
            <h1>Crear ingreso del veiculo</h1>
}
else
{
        <h1> Detalles del Veiculo</h1>
}
<div class="row">
    <div class="col-sm-4">
        <form asp-action="Auto_Detalle"asp-asp-controller="Home" method="post">
            <input type="hidden" asp-for="oAuto.Id"/>
             <div class="mb-2">
                <label class="form-label" asp-for="oAuto.Patente">Patente</label>
                <input class="form-control form-control-sm" asp-for="oAuto.Patente" type="text" />
            </div>
             <div class="mb-2">
                <label class="form-label" asp-for="oAuto.Marca">Marca</label>
                <input class="form-control form-control-sm" asp-for="oAuto.Marca" type="text"/>
            </div>
             <div class="mb-2">
                <label class="form-label" asp-for="oAuto.Modelo">Modelo</label>
                <input class="form-control form-control-sm" asp-for="oAuto.Modelo" type="text"/>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oAuto.NChasis">Numero de Chasis</label>
                <input class="form-control form-control-sm" asp-for="oAuto.NChasis" type="text"/>
            </div>
             <div class="mb-2">
                <label class="form-label" asp-for="oAuto.Año">Año</label>
                <input class="form-control form-control-sm" asp-for="oAuto.Año" type="text"/>
            </div>
             <div class="mb-2">
                <label class="form-label" asp-for="oAuto.Color">Color </label>
                <input class="form-control form-control-sm" asp-for="oAuto.Color" type="text"/>
            </div>
            <div class="mb-2">
                <label class="form-label">Datos del Cliente</label>
            </div>
             <div class="mb-2">
                <label class="form-label" asp-for="oAuto.TitularApellido">Apellido</label>
                <input class="form-control form-control-sm" asp-for="oAuto.TitularApellido" type="text"/>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oAuto.TitularNombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="oAuto.TitularNombre" type="text"/>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oAuto.Celular">Celucar</label>
                <input class="form-control form-control-sm" asp-for="oAuto.Celular" type="number"/>
            </div>
             <div class="mb-2">
                <label class="form-label" asp-for="oAuto.Km">KM (al momento del ingreso) </label>
                <input class="form-control form-control-sm" asp-for="oAuto.Km" type="number"/>
            </div>
             <div class="mb-2">
                <label class="form-label" asp-for="oAuto.Problema">Problema </label>
                <input class="form-control form-control-sm" asp-for="oAuto.Problema" type="number"/>
            </div>
             <div class="mb-2">
                <label class="form-label" asp-for="oAuto.Solucion">Solución </label>
                <input class="form-control form-control-sm" asp-for="oAuto.Solucion" type="number"/>
            </div>
                <div class="mb-3">
                <label class="form-label" asp-for="oAuto.oTecnico">Tecnico responsable</label>
                <select class="form-select form-select-sm" asp-for="oAuto.IdTecnico" asp-items="@Model.oListaTecnico">
                    <option >-- Seleccionar --</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="oAuto.oEstado">Estado del auto</label>
                <select class="form-select form-select-sm" asp-for="oAuto.IdEstado" asp-items="@Model.oListaEstado">
                    <option >-- Seleccionar --</option>
                </select>
            </div>

            <div class="mb-2">
                @if (Model.oAuto.Id == 0)
                {
                     <button class="btn btn-primary btn-sm w25" type="submit">Crear</button>
                }
                else
                {
                     <button class="btn btn-primary btn-sm w25" type="submit">Actualizar</button>
                }
                 <a class="btn btn-success btn-sm" asp-action="Index" asp-controller="Home" >Volver</a>
            </div>

        </form>
    </div>
</div>


